<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.pinterest.android.pinsdk.CreatePinActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pin_create_url"
        android:hint="Image Url"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/create_pin_board_id"
        android:layout_width="fill_parent"
        android:hint="Board Id"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_create_url"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pin_create_note"
        android:hint="Note"
        android:layout_below="@+id/create_pin_board_id"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pin_create_link"
        android:hint="Link (Optional)"
        android:layout_below="@+id/pin_create_note"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/save_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSelectImage"
        android:layout_alignBottom="@+id/btnSelectImage"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/btnSelectImage"
        android:layout_toRightOf="@+id/btnSelectImage"
        android:text="Save" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text=""
        android:id="@+id/pin_response_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pin_create_link"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:text="Select Image" />

</RelativeLayout>
